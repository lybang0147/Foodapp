<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:id="@+id/layout_orderlistline"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_orderlistline_date"
            android:text="15/02/2022"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtview_orderlistline_resname"
            android:text="Nhà hàng cappo"
            android:textStyle="bold"
            android:fontFamily="@font/times"
            android:textSize="25dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="65000đ"
            android:textSize="20dp"
            android:id="@+id/txtview_orderlistline_payment"
            >
        </TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/rightarrow"
        android:background="@color/Red"

        ></ImageView>
</LinearLayout>