<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cappo"
    android:orientation="vertical"
    tools:context=".OrderDetail">

    <ImageView
        android:id="@+id/imgview_orderdetail_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@color/cappo"
        android:src="@drawable/backarrow"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backgroundwhite">

        <TextView
            android:id="@+id/txtview_orderdetail_restaurantname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/times"
            android:gravity="center"
            android:text="Nhà hàng cappo"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtview_orderdetail_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="25/12/2022"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/listview_orderdetail_foodlist"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_margin="10dp"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtview_orderdetail_totalquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tạm tính"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_carttotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:text="60000đ"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtview_orderdetail_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/black"
                android:text="Phí ship"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_shiptotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="60000đ"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Tổng cộng"
                android:textColor="@color/black"
                android:textSize="19dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_ordertotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="60000đ"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Thanh toán bằng"
                android:textColor="@color/black"
                android:textSize="19dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="Tiền mặt"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/black"
                android:text="Tên"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="Huỳnh Lý Bằng"
                android:textSize="15dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/black"
                android:text="Số điện thoại"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="0336979934"
                android:textSize="15dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txtview_orderdetail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="Ký túc xá khu B"
                android:textSize="15dp"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>